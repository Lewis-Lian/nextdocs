{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev --filter=!./examples/*",
    "dev:examples": "turbo run dev --filter=./examples/*",
    "lint": "turbo run lint",
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "prettier": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "release": "turbo run build --filter=./packages/* && changeset publish && pnpm -r run postpublish",
    "test": "vitest",
    "types:check": "turbo run types:check",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "bun": "^1.2.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "6.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.0.1",
    "tsup": "8.5.0",
    "turbo": "2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "node": ">= 18.17.0"
  }
}
